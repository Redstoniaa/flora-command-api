{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "Extension to the Brigadier command library, making it easier to create commands, but harder for everyone else who has to download yet another dependency mod.",
  "authors": [
    "Redstonia"
  ],
  "contact": {
    "sources": "https://github.com/Redstoniaa/brigadier-extension"
  },

  "license": "MIT",
  "icon": "assets/flora/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "flora.FloraCommandAPI"
    ]
  },
  "mixins": [
    "flora.mixins.json"
  ],

  "depends": {
    "minecraft": "*",
    "fabricloader": ">=0.14.22",
    "fabric-api": "*",
    "java": ">=17"
  }
}
